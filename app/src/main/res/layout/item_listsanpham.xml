    <TextView
        android:id="@+id/txtTensp_item_listsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Ten san pham"
        android:textColor="@color/colorTextApp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtGia_item_listsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="700000"
        android:textColor="#FF5722"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtMota_item_listsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"

        android:text="hasgdja asdkjahsd asd ajsdaj as daj s jasjd aj  asdj asd asd as asd  asduas asd asd "
